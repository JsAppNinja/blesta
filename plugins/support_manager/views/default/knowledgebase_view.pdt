<script type="text/javascript">
$(document).ready(function() {
	$('#rate a').on('click', function(e) {
		e.preventDefault();
		
		var direction = ($(this).hasClass('green') ? 'up' : 'down');
		$('#direction').val(direction);
		
		$('#rate').trigger('submit');
		return false;
	});
	
	$('#rate').on('submit', function(e) {
		e.preventDefault();
		
		$(this).blestaRequest('POST', '<?php echo $this->Html->safe($this->base_uri . "plugin/support_manager/knowledgebase/rate/" . $this->Html->ifSet($article->id) . "/");?>', $(this).serialize(),
			function(data) {
				if (data.direction && data.rating) {
					var attr_class = (data.direction == 'up' ? 'green' : 'red');
					$('#rate a.' + attr_class + ' span').html(data.rating);
					
					$('#rate a.green, #rate a.red').addClass('disabled');
					$('#rate p.voted').show();
				}
			},
			null,
			{dataType: 'json'}
		);
		
		return false;
	});
});
</script>